@model IEnumerable<WebApp.Models.Developer>

@{
    ViewData["Title"] = "Index";
}

<div class="jumbotron">
    <h1>Developers List</h1>
    <p>
        <a class="btn btn-primary btn-lg" asp-action="Create">Add New Developer</a>
    </p>
</div>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DevFName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DevLName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DevFName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DevLName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DevID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DevID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DevID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
