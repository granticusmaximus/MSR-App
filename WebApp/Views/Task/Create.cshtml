@model WebApp.Models.MSRTask

@{
    ViewData["Title"] = "Create";
}
<div class="jumbotron">
    <h1>Add a new Task</h1>
</div>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="AssignedAppID" class="control-label"></label>
                <select asp-for="AssignedAppID" class="form-control" asp-items="ViewBag.AssignedApp"></select>
            </div>
            <div class="form-group">
                <label asp-for="MSRtitle" class="control-label"></label>
                <input asp-for="MSRtitle" class="form-control" />
                <span asp-validation-for="MSRtitle" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="AssignedEmpID" class="control-label"></label>
                <select asp-for="AssignedEmpID" class="form-control" asp-items="ViewBag.AssignedEmp"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateAdded" class="control-label"></label>
                <input asp-for="DateAdded" class="form-control" />
                <span asp-validation-for="DateAdded" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="MSRNote" class="control-label"></label>
                <textarea asp-for="MSRNote" class="form-control"></textarea>
                <span asp-validation-for="MSRNote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </div>
    </div>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
