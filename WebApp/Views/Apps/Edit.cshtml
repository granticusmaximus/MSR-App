@model WebApp.Models.AppList

@{
    ViewData["Title"] = "Edit";
}

<div class="jumbotron">
    <h1>Edit @Html.DisplayNameFor(model => model.AppName)'s Details</h1>
</div>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-12">
            <input type="hidden" asp-for="AppID" />
            <div class="form-group">
                <label asp-for="AppName" class="control-label"></label>
                <input asp-for="AppName" class="form-control" />
                <span asp-validation-for="AppName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="AssignedBA" class="control-label"></label>
                <select asp-for="AssignedBA" class="form-control" asp-items="ViewBag.AssignedBA"></select>
                <span asp-validation-for="AssignedBA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssignedDev" class="control-label"></label>
                <select asp-for="AssignedDev" class="form-control" asp-items="ViewBag.AssignedDev"></select>
                <span asp-validation-for="AssignedDev" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="POC" class="control-label"></label>
                <input asp-for="POC" class="form-control" />
                <span asp-validation-for="POC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telephone" class="control-label"></label>
                <input asp-for="Telephone" class="form-control" />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="POCEmail" class="control-label"></label>
                <input asp-for="POCEmail" class="form-control" />
                <span asp-validation-for="POCEmail" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="AppNotes" class="control-label"></label>
                <textarea asp-for="AppNotes" class="form-control"></textarea>
                <span asp-validation-for="AppNotes" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
